<MfTimer @startTime={{startTime}} as |interval isPlaying playPause|>
  <div class="timer">
    <MfColorizeInterval @interval={{interval}} @maxTimeInMilliseconds={{timeAllowedInMS}}>
      {{milliseconds-to-seconds interval}}
    </MfColorizeInterval>
  </div>

  <div class="question">
    {{{prompt}}} = <MfNumberInput @value={{value}} @enter={{action "submitResponse" interval}} />
    <button type="button" {{action 'submitResponse' interval}}>&check;</button>
  </div>

  <div class="buttons">
    <button type="button" {{action endInterview}}>Stop</button>
    {{#if isPlaying}}
      <button type="button" {{action playPause}}>Pause</button>
    {{else}}
      <button type="button" {{action playPause}}>Play</button>
    {{/if}}

    <button type="button" {{action 'submitResponse' interval}}>
      {{#if question.isLastQuestion}}
        End Interview
      {{else}}
        Next Question &rarr;
      {{/if}}
    </button>
  </div>
</MfTimer>